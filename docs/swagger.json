{
    "swagger": "2.0",
    "info": {
        "title": "特型卡片搜索系统",
        "contact": {},
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "host": "localhost:80",
    "basePath": "/",
    "paths": {
        "/data": {
            "post": {
                "description": "后端接收 XML 数据之接口",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "接收 XML 数据",
                "parameters": [
                    {
                        "type": "string",
                        "description": "特型卡名称 (如: car, poem 等)",
                        "name": "resource",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "操作类型 (insert, delete)",
                        "name": "type",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "file",
                        "description": "文件形式上传之数据",
                        "name": "file",
                        "in": "formData"
                    },
                    {
                        "type": "string",
                        "description": "数据内容",
                        "name": "data",
                        "in": "formData"
                    },
                    {
                        "type": "string",
                        "description": "文件名",
                        "name": "filename",
                        "in": "formData"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Error: Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "description": "后端密码接口",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "密码较验接口",
                "parameters": [
                    {
                        "type": "string",
                        "description": "用户名",
                        "name": "username",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "{\"password\": \"pwd\"}",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Error: Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/pattern": {
            "post": {
                "description": "后端接收配置文件之接口",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "接收配置文件",
                "parameters": [
                    {
                        "type": "string",
                        "description": "上传信息类型 (intent, garbage, pattern)",
                        "name": "type",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "特型卡名称 (如: car, poem 等)",
                        "name": "resource",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "数据内容",
                        "name": "data",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "操作类型 (insert, delete)",
                        "name": "operation",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "{\"message\": \"successful!\"}",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "错误原因",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/search": {
            "post": {
                "description": "后端搜索系统接口",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "搜索系统接口",
                "parameters": [
                    {
                        "type": "string",
                        "description": "要搜索的句子",
                        "name": "query",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Error: Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/setting": {
            "post": {
                "description": "后端接收写入行为之接口",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "接收写入行为数据",
                "parameters": [
                    {
                        "type": "string",
                        "description": "特型卡名称 (如: car, poem 等)",
                        "name": "resource",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "file",
                        "description": "文件形式上传之数据",
                        "name": "file",
                        "in": "formData"
                    },
                    {
                        "type": "string",
                        "description": "数据内容 (JSON 格式)",
                        "name": "data",
                        "in": "formData"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Error: Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}